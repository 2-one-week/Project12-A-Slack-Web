{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "lib": ["dom", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "isolatedModules": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outDir": "./build",
    "moduleResolution": "node",
    "paths": {
      "@atom/*": ["src/component/atom/*"],
      "@molecule/*": ["src/component/molecule/*"],
      "@organism/*": ["src/component/organism/*"],
      "@constant/*": ["src/component/constant/*"],
      "@page/*": ["src/component/page/*"],
      "@store/*": ["src/component/store/*"],
      "@util/*": ["src/component/util/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
