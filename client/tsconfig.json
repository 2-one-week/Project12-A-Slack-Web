{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "lib": ["dom", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "isolatedModules": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outDir": "./build",
    "moduleResolution": "node",
    "paths": {
      "@atom": ["src/component/atom/index"],
      "@molecule": ["src/component/molecule/index"],
      "@organism": ["src/component/organism/index"],
      "@store": ["src/store/index"],
      "@page":["src/page/index"],
      "@hook":["src/hook/index"],

      "@atom/*": ["src/component/atom/*"],
      "@molecule/*": ["src/component/molecule/*"],
      "@organism/*": ["src/component/organism/*"],

      "@constant/*": ["src/constant/*"],
      "@page/*": ["src/page/*"],
      "@store/*": ["src/store/*"],
      "@util/*": ["src/util/*"],
      "@api/*": ["src/api/*"],
      "@hook/*":["src/hook/*"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
